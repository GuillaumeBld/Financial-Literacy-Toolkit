{
  "name": "financial-literacy-toolkit",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "pnpm@8.15.8",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "cd apps/web && npm run lint"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "typescript": "5.4.5"
  },
  "pnpm": {
    "packageExtensions": {
      "next@*": {
        "dependencies": {
          "@swc/helpers": "0.5.2"
        }
      }
    }
  }
}