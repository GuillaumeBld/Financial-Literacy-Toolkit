# NextAuth secret for encrypting session tokens
NEXTAUTH_SECRET=changeme

# Base URL of the application (required in production for NextAuth callbacks)
NEXTAUTH_URL=http://localhost:3000

# LMS token verification endpoint (optional in development)
LMS_SSO_PROFILE_ENDPOINT=https://lms.example.com/sso/verify

# Upstream API base URL used by serverFetch/apiFetch helpers
# API_BASE_URL is used on the server while NEXT_PUBLIC_API_BASE is exposed to the client.
API_BASE_URL=https://api.example.com
NEXT_PUBLIC_API_BASE=https://api.example.com
